# Verwenden eines Basis-Images mit Java-Unterst체tzung und Maven
FROM openjdk:17-jdk-slim

# Installieren von Maven
RUN apt-get update && \
    apt-get install -y maven && \
    apt-get clean

# Setzen des Arbeitsverzeichnisses im Container
WORKDIR /app

# Kopieren der pom.xml und Herunterladen der Abh채ngigkeiten
COPY pom.xml .
COPY .mvn .mvn
COPY mvnw mvnw
RUN mvn dependency:go-offline -B

# Kopieren des gesamten Quellcodes in das Arbeitsverzeichnis
COPY src ./src
# Neue Zeile, um die mvnw Datei ausf체hrbar zu machen
RUN chmod +x mvnw

# Bauen des Projekts
RUN mvn package -DskipTests

# Exponieren der Ports
EXPOSE 8084

# Startbefehl f체r die Anwendung
CMD ["java", "-jar", "target/barclaysbank-0.0.1-SNAPSHOT.jar"]

